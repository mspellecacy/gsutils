<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<Tab closable="false" text="OLED" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
     fx:controller="gsutils.controller.OLEDManagementController">
    <content>
        <GridPane alignment="TOP_LEFT" hgap="10.0" vgap="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <VBox spacing="10.0">
                    <Label text="Rotation Interval (seconds)"></Label>
                    <Spinner fx:id="rotationIntervalSpinner" BorderPane.alignment="CENTER">
                    </Spinner>
                    <Button fx:id="savePrefsButton" text="Save" onAction="#savePrefs"/>
                </VBox>
            </children>
        </GridPane>
    </content>
</Tab>
